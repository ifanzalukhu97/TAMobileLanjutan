<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp32"
        android:padding="@dimen/dp4"
        android:background="@drawable/border_round">
        <ImageView
            android:id="@+id/transferimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_transfer_active"
            android:padding="@dimen/dp8"
            android:layout_margin="@dimen/dp20"
            android:background="@drawable/rounded_large"/>
        <TextView
            android:id="@+id/transfertext"
            android:layout_width="wrap_content"
            android:layout_height="@android:dimen/notification_large_icon_height"
            android:text="m-Transfer"
            android:textSize="20sp"
            android:textColor="#002866"
            android:textStyle="bold"
            android:padding="@dimen/dp8"
            android:layout_marginTop="@dimen/dp20"
            android:layout_toRightOf="@+id/transferimage"
            android:gravity="center_vertical"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/transferimage"
            android:padding="@dimen/dp8"
            android:background="@drawable/border_bottom_round">
            <ListView
                android:id="@+id/transferlistview"
                android:padding="@dimen/dp8"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
